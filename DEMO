<body>
  <div class="box">
    <h1>Sondage officiel</h1>
    <p>üì∏ Objectif : √† <strong>30 oui</strong>, Alexis poste une <strong>photo honteuse</strong> üòà</p>
    <button onclick="vote('oui')">Oui, √©videmment</button>
    <button onclick="vote('non')">Non (menteur)</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    let votes = {
      oui: parseInt(localStorage.getItem('votes_oui')) || 0,
      non: parseInt(localStorage.getItem('votes_non')) || 0
    };

    let hasVoted = localStorage.getItem('hasVoted');

    function updateDisplay() {
      let message = `Oui : ${votes.oui} vote(s)<br>Non : ${votes.non} vote(s)`;
      if (votes.oui >= 30) {
        message += '<br><br>üéâ <strong>OBJECTIF ATTEINT</strong> üéâ<br>Alexis doit poster une photo honteuse üòà';
      }
      document.getElementById('result').innerHTML = message;
    }

    function vote(choice) {
      if (hasVoted) {
        alert('‚ùå Tu as d√©j√† vot√© !');
        return;
      }

      const confirmation = confirm(`Confirme-tu ton vote : ${choice.toUpperCase()} ?`);
      if (!confirmation) return;

      votes[choice]++;
      localStorage.setItem('votes_oui', votes.oui);
      localStorage.setItem('votes_non', votes.non);
      localStorage.setItem('hasVoted', 'true');
      hasVoted = true;

      updateDisplay();
    }

    updateDisplay();
  </script>
